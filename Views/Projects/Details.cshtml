@model MyWebSite.ViewModels.ProjectViewModel



@{
    ViewData["Title"] = "Edit Project";

}

<div class="backgroundWhiteBorder">

    <h4>@ViewData["Title"]</h4>


    <partial name="_ProjectDetails.cshtml" />

    <div class="row">
        <div class="col-12 col-md-6">
            <a class="btn btn-warning form-control" asp-action="Index">Back to List</a>
        </div>
        <div class="col-12 col-md-6">
            <a class="btn btn-primary form-control" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </div>
    </div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>$(function () {
            $('#datetimepicker4').datetimepicker({
                format: 'L'
            });
        });

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });</script>
}