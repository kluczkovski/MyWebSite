@model MyWebSite.ViewModels.ProjectImageViewModel


<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<input asp-for="Id" type="hidden" />

<div class="row">

    @if (Model.Image != null)
    {
        <div class="col-12 col-md-12 ">
            <img src="~/images/@Model.Image" alt="@Model.ImageName" style="width:70px; height:100px;" />
        </div>
    }    
</div>

<div class="row">
    <div class="col-12 col-md-6 ">
        <div class="form-group">
            <label asp-for="ImageName" class="control-label"></label>
            <input asp-for="ImageName" class="form-control" placeholder="Enter Image Name">
            <span asp-validation-for="ImageName" class="text-danger"></span>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12 col-md-6">
        <div class="form-group">
            <label asp-for="ImageUpload" class="control-label"></label>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="ImageUpload" asp-for="ImageUpload" />
                <label class="custom-file-label" for="ImageUpload">Choose file</label>
            </div>
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
        </div>
    </div>
</div>
